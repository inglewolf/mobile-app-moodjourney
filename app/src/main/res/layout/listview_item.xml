<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--List item background-->
    <ImageView
        android:id="@+id/listBG"
        android:layout_width="wrap_content"
        android:layout_height="104dp"
        android:baselineAlignBottom="false"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/listbg" />

    <!--To display selected emotion-->
    <ImageView
        android:id="@+id/emote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="205dp"
        app:layout_constraintBottom_toBottomOf="@+id/listBG"
        app:layout_constraintEnd_toEndOf="@+id/listBG"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/listBG"
        app:layout_constraintTop_toTopOf="@+id/listBG"
        app:layout_constraintVertical_bias="0.506"
        app:srcCompat="@drawable/empty" />

    <!--Display journal entry's title-->
    <TextView
        android:id="@+id/entryTitle"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/josefin_sans_bold"
        android:gravity="center_vertical"
        android:text="Post Title"
        android:textColor='@color/white'
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/listBG"
        app:layout_constraintEnd_toEndOf="@+id/listBG"
        app:layout_constraintTop_toTopOf="@+id/listBG"
        app:layout_constraintVertical_bias="0.75" />

    <!--Display date/day of list item-->
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_sans_bold"
        android:text="Date"
        android:textColor='#999999'
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/listBG"
        app:layout_constraintTop_toTopOf="@+id/listBG" />

</androidx.constraintlayout.widget.ConstraintLayout>